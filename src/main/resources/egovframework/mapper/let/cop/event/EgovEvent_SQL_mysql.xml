<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EventDAO">
	
	<select id="selectEventAllList" resultMap="eventResultMap" >
			SELECT 
				EVENT_SEQ,
				BBS_SEQ,
				EVENT_TITLE,
				EVENT_CONTENT,
				EVENT_STATUS,
				ATCH_FILE_SEQ,
				EVENT_DATE,
				EVENT_RDCNT,
				EVENT_WINNER
			FROM
				EVENTBOARD			
	</select>
	
	<select id="selectEventDetail" parameterType="egovframework.let.cop.event.service.EventVO" resultMap="eventResultMap" >
			SELECT 
				EVENT_SEQ,
				BBS_SEQ,
				EVENT_TITLE,
				EVENT_CONTENT,
				EVENT_STATUS,
				ATCH_FILE_SEQ,
				EVENT_DATE,
				EVENT_RDCNT,
				EVENT_WINNER
			FROM
				EVENTBOARD
			WHERE
				EVENT_SEQ = #{eventSeq}
	</select>
	
	<resultMap id="eventResultMap" type="egovframework.let.cop.event.service.EventVO">
		<result property="eventSeq" column="EVENT_SEQ"/>
		<result property="bbsSeq" column="BBS_SEQ"/>
		<result property="eventTitle" column="EVENT_TITLE"/>
		<result property="eventContent" column="EVENT_CONTENT"/>
		<result property="eventStatus" column="EVENT_STATUS"/>
		<result property="atchFileSeq" column="ATCH_FILE_SEQ"/>
		<result property="eventDate" column="EVENT_DATE"/>
		<result property="eventRdcnt" column="EVENT_RDCNT"/>
		<result property="eventWinner" column="EVENT_WINNER"/>
	</resultMap>
</mapper>