"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="OrderDAO">

	<resultMap id="orderInfo" type="foodmall.client.order.service.OrderVO">
		<result property="orderSeq" column="order_seq"/>
		<result property="emailId" column="emailId"/>
		<result property="userAddr1" column="mem_addr1"/>
		<result property="userAddr2" column="mem_addr2"/>
		<result property="userAddr3" column="mem_addr3"/>
		<result property="orderPhone" column="order_phone"/>
		<result property="orderDate" column="order_date"/>
		<result property="amount" column="order_amount"/>
		<result property="orderNote" column="order_note"/>				
	</resultMap>
	
	<resultMap id="cartList" type="foodmall.client.order.service.CartListVO">
		<result property="cartSeq" column="cart_seq"/>
		<result property="emailId" column="emailId"/>
		<result property="proSeq" column="pro_seq"/>
		<result property="cartStock" column="cartStock"/>
		<result property="addDated" column="add_date"/>
		<result property="proName" column="pro_name"/>
		<result property="proPrice" column="pro_price"/>
		<result property="proImg" column="pro_img"/>
	</resultMap>

    <insert id="orderInsert">
		
		INSERT INTO order (	
			order_seq,		
			emailId, 
			mem_addr1, 
			mem_addr2,
			mem_addr3,
			order_phone,
			order_date,
			order_amount,
			order_note
		) VALUES (
			
			#{emailId}, 
			#{userAddr1}, 
			#{userAddr2},
			#{userAddr3},
			#{orderPhone},
			sysdate(),
			#{amount},
			#{orderNote},
		)
	</insert>
	
	 <insert id="orderDetailInsert">
		
		INSERT INTO orderDetail (						 
			
			order_seq, 
			pro_seq,
			cart_stock,		
			order_note
		) SELECT 
			 orderDetail_seq,
			#{orderSeq}, 
			pro_seq,
			cart_stock,
			order_note
		FROM order
		
	</insert>
    
	<insert id="addCart">
		
		INSERT INTO cart (	
			cart_seq,		
			emailId, 
			pro_seq, 
			cartStock,
			add_date,
			pro_name,
			pro_price,
			pro_img,
			
		) VALUES (
			
			#{emailId}, 
			#{proSeq}, 
			#{cartStock},
			sysdate(),
			#{proName},
			
			#{proPrice},
			#{proImg},
		)
	</insert>
     <select id="cartList" resultMap="cartList">     
          SELECT
              *
          FROM
              cart
          WHERE
              emailId = #{emailId}           
    </select>

